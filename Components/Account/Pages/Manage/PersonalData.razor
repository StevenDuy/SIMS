@page "/Account/Manage/PersonalData"

@using Microsoft.AspNetCore.Identity
@using SIMS.Data

@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Personal Data</PageTitle>

<div class="compact-grid-wrapper">
    <div class="compact-left-col">
        <div class="compact-icon-box" style="background: #f0f9ff; color: #0284c7;">
            <i class="fa-solid fa-database"></i>
        </div>
        <h4 class="compact-title">Data Privacy</h4>
        <p style="font-size: 0.85rem; color: var(--text-muted); margin: 0;">
            Download or permanently delete your data.
        </p>
    </div>

    <div class="compact-right-col" style="width: 100%; display: flex; flex-direction: column; gap: 1rem;">
        <form action="Account/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn btn-primary hover-lift btn-sm-custom w-100" type="submit">
                <i class="fa-solid fa-download me-2"></i> Download Data
            </button>
        </form>

        <div style="border-top: 1px solid #f1f5f9; padding-top: 1rem; margin-top: 0.5rem;">
            <p style="font-size: 0.8rem; color: #ef4444; margin-bottom: 0.5rem;">
                <i class="fa-solid fa-triangle-exclamation"></i> <strong>Danger Zone:</strong> Cannot be undone.
            </p>
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger hover-lift btn-sm-custom w-100">
                Delete Account
            </a>
        </div>
    </div>
</div>

<style>
    /* Paste lại CSS .compact-grid-wrapper... */
</style>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}