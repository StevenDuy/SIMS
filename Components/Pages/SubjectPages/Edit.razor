@page "/subjects/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Subject</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (Subject is null)
    {
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>Edit Subject</h1>
                <div style="color: var(--text-muted);">Update information for <strong>@Subject.Name</strong></div>
            </div>
            <a href="/subjects" class="btn btn-secondary hover-lift">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-modern hover-lift">
            <EditForm method="post" Model="Subject" OnValidSubmit="UpdateSubject" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <input type="hidden" name="Subject.Id" value="@Subject.Id" />

                <div class="form-grid">
                    <div class="form-group form-full">
                        <label class="form-label">Subject Name <span style="color:var(--danger)">*</span></label>
                        <InputText @bind-Value="Subject.Name" class="form-control" />
                        <ValidationMessage For="() => Subject.Name" class="validation-message" />
                    </div>

                    <div class="form-group form-full">
                        <label class="form-label">Subject Code</label>
                        <InputText @bind-Value="Subject.Code" class="form-control" placeholder="e.g. CS101" />
                        <ValidationMessage For="() => Subject.Code" class="validation-message" />
                    </div>
                </div>

                <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary hover-lift" style="min-width: 160px;">
                        <i class="fa-solid fa-save"></i> Save Changes
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private Subject? Subject { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Subject ??= await context.Subjects.FirstOrDefaultAsync(m => m.Id == Id);
        if (Subject is null) NavigationManager.NavigateTo("notfound");
    }

    private async Task UpdateSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Subject!).State = EntityState.Modified;
        try { await context.SaveChangesAsync(); }
        catch (DbUpdateConcurrencyException)
        {
            if (!SubjectExists(Subject!.Id)) NavigationManager.NavigateTo("notfound");
            else throw;
        }
        NavigationManager.NavigateTo("/subjects");
    }
    private bool SubjectExists(int id) { using var context = DbFactory.CreateDbContext(); return context.Subjects.Any(e => e.Id == id); }
}