@page "/users/details"
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager

<PageTitle>User Details</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (User is null)
    {
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>User Details</h1>
                <div style="color: var(--text-muted);">Profile view for <strong>@User.Name</strong></div>
            </div>
            <a href="/users" class="btn btn-secondary hover-lift">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-modern">
            <div style="display: flex; gap: 1.5rem; align-items: flex-start; margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid #f1f5f9;">
                <div style="width: 64px; height: 64px; background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%); color: var(--primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.75rem; box-shadow: var(--shadow-sm);">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div>
                    <h2 style="margin: 0 0 0.5rem 0; font-size: 1.75rem; color: var(--text-main);">@User.Name</h2>
                    <span style="background: #f1f5f9; padding: 4px 12px; border-radius: 99px; font-size: 0.85rem; color: var(--text-muted); font-weight: 500;">
                        @User.Email
                    </span>
                </div>
            </div>

            <div class="form-grid">
                <div>
                    <label class="form-label" style="color: var(--text-muted);">Student ID</label>
                    <div style="font-size: 1.1rem; font-weight: 500; display: flex; align-items: center; gap: 10px;">
                        <i class="fa-solid fa-id-card" style="color: var(--primary);"></i>
                        @(string.IsNullOrEmpty(User.StudentId) ? "N/A" : User.StudentId)
                    </div>
                </div>

                <div>
                    <label class="form-label" style="color: var(--text-muted);">Assigned Role</label>
                    <div style="font-size: 1.1rem; font-weight: 500; display: flex; align-items: center; gap: 10px;">
                        <i class="fa-solid fa-shield-halved" style="color: var(--primary);"></i>
                        @(string.IsNullOrEmpty(RolesStr) ? "None" : RolesStr)
                    </div>
                </div>
            </div>

            <div style="margin-top: 2.5rem; display: flex; gap: 1rem; border-top: 1px solid #f1f5f9; padding-top: 1.5rem;">
                <a href="@($"/users/edit?id={User.Id}")" class="btn btn-primary hover-lift">
                    <i class="fa-solid fa-pen-to-square"></i> Edit User
                </a>
                <a href="@($"/users/delete?id={User.Id}")" class="btn btn-danger hover-lift" style="background: white; color: var(--danger); border: 1px solid var(--danger); box-shadow: none;">
                    <i class="fa-solid fa-trash-can"></i> Delete
                </a>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] public string Id { get; set; } = "";
    private ApplicationUser? User { get; set; }
    private string RolesStr { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Id))
        {
            User = await UserManager.FindByIdAsync(Id);
            if (User is null) { NavigationManager.NavigateTo("notfound"); return; }
            var roles = await UserManager.GetRolesAsync(User);
            RolesStr = string.Join(", ", roles);
        }
    }
}