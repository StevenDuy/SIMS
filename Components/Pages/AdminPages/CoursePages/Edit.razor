@page "/courses/edit"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<PageTitle>Edit Course</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (Course is null)
    {
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>Edit Course</h1>
                <div style="color: var(--text-muted);">Update details for <strong>@Course.Name</strong></div>
            </div>
            <a href="/courses" class="btn btn-secondary hover-lift">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-modern hover-lift">
            <EditForm method="post" Model="Course" OnValidSubmit="UpdateCourse" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <input type="hidden" name="Course.Id" value="@Course.Id" />

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Course Code <span style="color:var(--danger)">*</span></label>
                        <InputText @bind-Value="Course.Code" class="form-control" placeholder="e.g. CS101" />
                        <ValidationMessage For="() => Course.Code" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Course Name <span style="color:var(--danger)">*</span></label>
                        <InputText @bind-Value="Course.Name" class="form-control" />
                        <ValidationMessage For="() => Course.Name" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Subject</label>
                        <InputSelect @bind-Value="Course.SubjectId" class="form-control">
                            <option value="">Select Subject...</option>
                            @foreach (var s in Subjects)
                            {
                                <option value="@s.Id">@s.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Course.SubjectId" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Semester</label>
                        <InputSelect @bind-Value="Course.SemesterId" class="form-control">
                            <option value="">Select Semester...</option>
                            @foreach (var sem in Semesters)
                            {
                                <option value="@sem.Id">@sem.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Course.SemesterId" class="validation-message" />
                    </div>

                    <div class="form-group form-full">
                        <label class="form-label">Assign Lecturer</label>
                        <InputSelect @bind-Value="Course.LectureId" class="form-control">
                            <option value="">-- Unassigned --</option>
                            @foreach (var lecturer in Lecturers)
                            {
                                <option value="@lecturer.Id">@lecturer.Name (@lecturer.Email)</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Course.LectureId" class="validation-message" />
                    </div>
                </div>

                <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary hover-lift" style="min-width: 160px;">
                        <i class="fa-solid fa-save"></i> Save Changes
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private Course? Course { get; set; }

    private List<Subject> Subjects { get; set; } = new();
    private List<Semester> Semesters { get; set; } = new();
    private List<ApplicationUser> Lecturers { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        // Load Course
        Course ??= await context.Courses.FirstOrDefaultAsync(m => m.Id == Id);
        if (Course is null) NavigationManager.NavigateTo("notfound");

        // Load Related Data
        Subjects = await context.Subjects.AsNoTracking().ToListAsync();
        Semesters = await context.Semesters.AsNoTracking().ToListAsync();

        // Load Lecturers based on Role
        // Lưu ý: Đảm bảo Role "Lecture" tồn tại trong DB, nếu không dòng này sẽ trả về null
        var lecturerRole = await RoleManager.FindByNameAsync("Lecture");
        if (lecturerRole != null)
        {
            // Lấy danh sách User có RoleId tương ứng
            var userIds = await context.UserRoles
                .Where(ur => ur.RoleId == lecturerRole.Id)
                .Select(ur => ur.UserId)
                .ToListAsync();

            Lecturers = await UserManager.Users
                .Where(u => userIds.Contains(u.Id))
                .ToListAsync();
        }
        else
        {
            // Fallback: Nếu chưa có role, lấy toàn bộ user (để debug) hoặc để trống
            Lecturers = await UserManager.Users.ToListAsync();
        }
    }

    private async Task UpdateCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Course!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CourseExists(Course!.Id)) NavigationManager.NavigateTo("notfound");
            else throw;
        }

        NavigationManager.NavigateTo("/courses");
    }

    private bool CourseExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Courses.Any(e => e.Id == id);
    }
}