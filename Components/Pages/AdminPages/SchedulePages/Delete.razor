@page "/schedules/delete"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Schedule</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (schedule is null)
    {
        <div style="text-align:center; padding:4rem;">Loading...</div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>Delete Schedule</h1>
                <div style="color: var(--text-muted);">Confirm deletion</div>
            </div>
        </div>

        <div class="card-modern" style="border-left: 4px solid var(--danger);">
            <div style="background-color: #fee2e2; padding: 1.5rem; border-radius: 12px; display: flex; gap: 1.25rem; margin-bottom: 2rem; border: 1px solid #fecaca;">
                <div style="color: var(--danger); font-size: 1.75rem;"><i class="fa-solid fa-triangle-exclamation"></i></div>
                <div>
                    <h3 style="color: #991b1b; margin: 0 0 0.5rem 0;">Confirm Delete</h3>
                    <p style="color: #b91c1c; margin: 0;">Are you sure you want to delete this schedule entry?</p>
                </div>
            </div>

            <div class="form-grid" style="margin-bottom: 2rem;">
                <div>
                    <label class="form-label" style="color: var(--text-muted);">Course</label>
                    <div style="font-weight: 600;">@schedule.Course?.Name</div>
                </div>
                <div>
                    <label class="form-label" style="color: var(--text-muted);">Time & Location</label>
                    <div>@schedule.DayOfWeek: @schedule.StartTime - @schedule.EndTime at <strong>@schedule.Room</strong></div>
                </div>
            </div>

            <EditForm method="post" Model="schedule" OnValidSubmit="DeleteSchedule" FormName="delete" Enhance>
                <div style="display: flex; justify-content: flex-end; gap: 1rem;">
                    <a href="/schedules" class="btn btn-secondary hover-lift">Cancel</a>
                    <button type="submit" class="btn btn-danger hover-lift">
                        <i class="fa-solid fa-trash-can"></i> Confirm Delete
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private Schedule? schedule;
    [SupplyParameterFromQuery] private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        schedule = await context.Schedules.Include(s => s.Course).FirstOrDefaultAsync(m => m.Id == Id);
        if (schedule is null) NavigationManager.NavigateTo("notfound");
    }

    private async Task DeleteSchedule()
    {
        using var context = DbFactory.CreateDbContext();
        context.Schedules.Remove(schedule!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/schedules");
    }
}