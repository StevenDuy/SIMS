@page "/schedules/create"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Schedule</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    <div class="page-header">
        <div class="header-content">
            <h1>Create Schedule</h1>
            <div style="color: var(--text-muted);">Set time and location for a course</div>
        </div>
        <a href="/schedules" class="btn btn-secondary hover-lift">
            <i class="fa-solid fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card-modern hover-lift">
        <EditForm method="post" Model="Schedule" OnValidSubmit="AddSchedule" FormName="create_schedule" Enhance>
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="form-group form-full">
                    <label class="form-label">Course (Subject - Lecturer)</label>
                    <InputSelect @bind-Value="Schedule.CourseId" class="form-select">
                        <option value="0">-- Select Course --</option>
                        @foreach (var c in Courses)
                        {
                            <option value="@c.Id">@c.Name (@c.Subject?.Name - @(c.Lecture?.Name ?? "No Lecturer"))</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Schedule.CourseId" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Room / Location</label>
                    <InputText @bind-Value="Schedule.Room" class="form-control" placeholder="e.g. Room A101" />
                    <ValidationMessage For="() => Schedule.Room" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Day of Week</label>
                    <InputSelect @bind-Value="Schedule.DayOfWeek" class="form-select">
                        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                        {
                            <option value="@day">@day</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label class="form-label">Start Time</label>
                    <InputDate Type="InputDateType.Time" @bind-Value="Schedule.StartTime" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="form-label">End Time</label>
                    <InputDate Type="InputDateType.Time" @bind-Value="Schedule.EndTime" class="form-control" />
                </div>
            </div>

            <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                <button type="submit" class="btn btn-primary hover-lift" style="min-width: 160px;">
                    <i class="fa-regular fa-calendar-plus"></i> Save Schedule
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm] private Schedule Schedule { get; set; } = new();
    private List<Course> Courses { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Courses = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Lecture)
            .ToListAsync();

        // Khởi tạo giờ mặc định dùng TimeOnly
        if (Schedule.StartTime == default)
        {
            Schedule.StartTime = new TimeOnly(7, 0); // 07:00 AM
            Schedule.EndTime = new TimeOnly(9, 0);   // 09:00 AM
            Schedule.DayOfWeek = DayOfWeek.Monday;
        }
    }

    private async Task AddSchedule()
    {
        using var context = DbFactory.CreateDbContext();
        context.Schedules.Add(Schedule);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/schedules");
    }
}