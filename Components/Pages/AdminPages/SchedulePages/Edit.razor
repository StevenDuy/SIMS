@page "/schedules/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Schedule</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (Schedule is null)
    {
        <div style="text-align:center; padding:4rem;">Loading...</div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>Edit Schedule</h1>
                <div style="color: var(--text-muted);">Update timetable details</div>
            </div>
            <a href="/schedules" class="btn btn-secondary hover-lift">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-modern hover-lift">
            <EditForm method="post" Model="Schedule" OnValidSubmit="UpdateSchedule" FormName="edit_schedule" Enhance>
                <DataAnnotationsValidator />
                <input type="hidden" name="Schedule.Id" value="@Schedule.Id" />

                <div class="form-grid">
                    <div class="form-group form-full">
                        <label class="form-label">Course</label>
                        <InputSelect @bind-Value="Schedule.CourseId" class="form-select">
                            @foreach (var c in Courses)
                            {
                                <option value="@c.Id">@c.Name (@c.Subject?.Name)</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Room</label>
                        <InputText @bind-Value="Schedule.Room" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Day of Week</label>
                        <InputSelect @bind-Value="Schedule.DayOfWeek" class="form-select">
                            @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                            {
                                <option value="@day">@day</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Start Time</label>
                        <InputDate Type="InputDateType.Time" @bind-Value="Schedule.StartTime" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">End Time</label>
                        <InputDate Type="InputDateType.Time" @bind-Value="Schedule.EndTime" class="form-control" />
                    </div>
                </div>

                <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary hover-lift">
                        <i class="fa-solid fa-floppy-disk"></i> Save Changes
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private Schedule? Schedule { get; set; }
    private List<Course> Courses { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Schedule ??= await context.Schedules.FirstOrDefaultAsync(m => m.Id == Id);
        Courses = await context.Courses.Include(c => c.Subject).ToListAsync();

        if (Schedule is null) NavigationManager.NavigateTo("notfound");
    }

    private async Task UpdateSchedule()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Schedule!).State = EntityState.Modified;
        try { await context.SaveChangesAsync(); }
        catch (DbUpdateConcurrencyException)
        {
            if (!ScheduleExists(Schedule!.Id)) NavigationManager.NavigateTo("notfound");
            else throw;
        }
        NavigationManager.NavigateTo("/schedules");
    }
    private bool ScheduleExists(int id) { using var context = DbFactory.CreateDbContext(); return context.Schedules.Any(e => e.Id == id); }
}