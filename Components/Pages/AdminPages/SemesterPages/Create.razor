@page "/semesters/create"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>New Semester</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    <div class="page-header">
        <div class="header-content">
            <h1>Create Semester</h1>
            <div style="color: var(--text-muted);">Define academic term and duration</div>
        </div>
        <a href="/semesters" class="btn btn-secondary hover-lift">
            <i class="fa-solid fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card-modern hover-lift">
        <EditForm method="post" Model="Semester" OnValidSubmit="AddSemester" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" />

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Semester Name <span class="text-danger">*</span></label>
                    <InputText @bind-Value="Semester.Name" class="form-control" placeholder="e.g. Spring 2025" />
                    <ValidationMessage For="() => Semester.Name" class="text-danger" />
                </div>

                <div class="form-group">
                    <label class="form-label">Semester Code <span class="text-danger">*</span></label>
                    <InputText @bind-Value="Semester.Code" class="form-control" placeholder="e.g. SP25" />
                    <ValidationMessage For="() => Semester.Code" class="text-danger" />
                </div>

                <div class="form-group">
                    <label class="form-label">Start Date <span class="text-danger">*</span></label>
                    <InputDate @bind-Value="Semester.StartDate" class="form-control" />
                    <ValidationMessage For="() => Semester.StartDate" class="text-danger" />
                </div>

                <div class="form-group">
                    <label class="form-label">End Date <span class="text-danger">*</span></label>
                    <InputDate @bind-Value="Semester.EndDate" class="form-control" />
                    <ValidationMessage For="() => Semester.EndDate" class="text-danger" />
                </div>
            </div>

            <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                <button type="submit" class="btn btn-primary hover-lift" style="min-width: 160px;">
                    <i class="fa-solid fa-check-circle"></i> Create Term
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Semester Semester { get; set; } = new();

    // Khởi tạo giá trị mặc định khi trang load
    protected override void OnInitialized()
    {
        if (Semester.StartDate == default)
        {
            Semester.StartDate = DateOnly.FromDateTime(DateTime.Now);
            Semester.EndDate = DateOnly.FromDateTime(DateTime.Now.AddMonths(4));
        }
    }

    private async Task AddSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Semesters.Add(Semester);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/semesters");
    }
}