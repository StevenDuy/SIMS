@page "/departments/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Department</PageTitle>
<link rel="stylesheet" href="app.css" />

<div class="app-container animate-fade-in">
    @if (Department is null)
    {
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <h1>Edit Department</h1>
                <div style="color: var(--text-muted);">Update info for <strong>@Department.Name</strong></div>
            </div>
            <a href="/departments" class="btn btn-secondary hover-lift">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-modern hover-lift">
            <EditForm method="post" Model="Department" OnValidSubmit="UpdateDepartment" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <input type="hidden" name="Department.Id" value="@Department.Id" />

                <div class="form-grid">
                    <div class="form-group form-full">
                        <label class="form-label">Department Name <span style="color:var(--danger)">*</span></label>
                        <InputText @bind-Value="Department.Name" class="form-control" />
                        <ValidationMessage For="() => Department.Name" class="validation-message" />
                    </div>
                </div>

                <div style="margin-top: 2.5rem; display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary hover-lift" style="min-width: 160px;">
                        <i class="fa-solid fa-save"></i> Save Changes
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    [SupplyParameterFromForm] private Department? Department { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Department ??= await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);
        if (Department is null) NavigationManager.NavigateTo("notfound");
    }

    private async Task UpdateDepartment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Department!).State = EntityState.Modified;
        try { await context.SaveChangesAsync(); }
        catch (DbUpdateConcurrencyException)
        {
            if (!DepartmentExists(Department!.Id)) NavigationManager.NavigateTo("notfound");
            else throw;
        }
        NavigationManager.NavigateTo("/departments");
    }
    private bool DepartmentExists(int id) { using var context = DbFactory.CreateDbContext(); return context.Departments.Any(e => e.Id == id); }
}